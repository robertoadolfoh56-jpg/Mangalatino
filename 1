    <script>
        let mangaLibrary = [];
        let currentManga = null;
        let currentPage = 1;
        let totalPages = 1;
        let uploadedFiles = [];

        // Datos de muestra
        const sampleMangas = [
            { id: 1, title: "Naruto", author: "Masashi Kishimoto", genre: "shonen", chapters: 700, cover: null },
            { id: 2, title: "One Piece", author: "Eiichiro Oda", genre: "shonen", chapters: 1000, cover: null },
            { id: 3, title: "Attack on Titan", author: "Hajime Isayama", genre: "seinen", chapters: 139, cover: null },
            { id: 4, title: "Death Note", author: "Tsugumi Ohba", genre: "seinen", chapters: 108, cover: null },
            { id: 5, title: "Demon Slayer", author: "Koyoharu Gotouge", genre: "shonen", chapters: 205, cover: null },
            { id: 6, title: "My Hero Academia", author: "Kohei Horikoshi", genre: "shonen", chapters: 300, cover: null }
        ];

        // Inicializar la biblioteca con datos de muestra
        mangaLibrary = [...sampleMangas];

        function showSection(sectionId) {
            // Ocultar todas las secciones
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Mostrar la secci√≥n seleccionada
            document.getElementById(sectionId).classList.add('active');
            
            // Actualizar contenido seg√∫n la secci√≥n
            if (sectionId === 'home') {
                loadHomeMangas();
            } else if (sectionId === 'library') {
                loadLibraryMangas();
            }
        }

        function loadHomeMangas() {
            const container = document.getElementById('homeMangas');
            container.innerHTML = '';
            
            mangaLibrary.slice(0, 6).forEach(manga => {
                const mangaCard = createMangaCard(manga);
                container.appendChild(mangaCard);
            });
        }

        function loadLibraryMangas() {
            const container = document.getElementById('libraryMangas');
            container.innerHTML = '';
            
            mangaLibrary.forEach(manga => {
                const mangaCard = createMangaCard(manga);
                container.appendChild(mangaCard);
            });
        }

        function createMangaCard(manga) {
            const card = document.createElement('div');
            card.className = 'manga-card';
            card.onclick = () => openManga(manga);
            
            card.innerHTML = `
                <div class="manga-cover">
                    ${manga.cover ? `<img src="${manga.cover}" alt="${manga.title}">` : `üìñ ${manga.title}`}
                </div>
                <div class="manga-info">
                    <div class="manga-title">${manga.title}</div>
                    <div class="manga-chapters">${manga.chapters} cap√≠tulos</div>
                    <div style="font-size: 12px; color: #888; margin-top: 5px;">${manga.author}</div>
                </div>
            `;
            
            return card;
        }

        function openManga(manga) {
            currentManga = manga;
            currentPage = 1;
            totalPages = Math.ceil(manga.chapters / 10); // Simulamos p√°ginas
            
            showSection('reader');
            updateReader();
        }

        function updateReader() {
            if (!currentManga) return;
            
            const readerContent = document.getElementById('readerContent');
            const pageInfo = document.getElementById('pageInfo');
            
            pageInfo.textContent = `P√°gina ${currentPage} de ${totalPages}`;
            
            // Simulamos contenido del manga
            readerContent.innerHTML = `
                <div style="text-align: center;">
                    <h3>${currentManga.title} - Cap√≠tulo ${currentPage}</h3>
                    <div class="page-display" style="background: linear-gradient(45deg, #f0f2f0, #d0d2d0); display: flex; align-items: center; justify-content: center; height: 500px; border-radius: 10px; margin: 20px 0;">
                        <div style="text-align: center; color: #666;">
                            <h2>üìñ P√°gina del Manga</h2>
                            <p>Aqu√≠ se mostrar√≠a el contenido del manga</p>
                            <p><em>${currentManga.title} - P√°gina ${currentPage}</em></p>
                        </div>
                    </div>
                </div>
            `;
        }

        function previousPage() {
            if (currentPage > 1) {
                currentPage--;
                updateReader();
            }
        }

        function nextPage() {
            if (currentPage < totalPages) {
                currentPage++;
                updateReader();
            }
        }

        function searchManga(query) {
            // Implementar b√∫squeda en tiempo real
            console.log('Buscando:', query);
        }

        function filterByGenre(genre) {
            console.log('Filtrando por g√©nero:', genre);
        }

        // Configurar drag & drop para subida de archivos
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');

        uploadArea.addEventListener('click', () => fileInput.click());

        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('dragover');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('dragover');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('dragover');
            
            const files = Array.from(e.dataTransfer.files);
            handleFiles(files);
        });

        fileInput.addEventListener('change', (e) => {
            const files = Array.from(e.target.files);
            handleFiles(files);
        });

        function handleFiles(files) {
            uploadedFiles = files;
            
            const uploadArea = document.getElementById('uploadArea');
            uploadArea.innerHTML = `
                <div>
                    <h3>‚úÖ ${files.length} archivo(s) seleccionado(s)</h3>
                    <p>Archivos listos para subir:</p>
                    <ul style="text-align: left; max-width: 300px; margin: 0 auto;">
                        ${files.map(file => `<li>${file.name}</li>`).join('')}
                    </ul>
                </div>
            `;
        }

        // Manejar env√≠o del formulario
        document.getElementById('uploadForm').addEventListener('submit', (e) => {
            e.preventDefault();
            
            // Simular subida
            const loadingDiv = document.createElement('div');
            loadingDiv.className = 'loading';
            loadingDiv.innerHTML = `
                <div class="spinner"></div>
                <p>Subiendo manga...</p>
            `;
            
            const mainContent = document.querySelector('.main-content');
            mainContent.appendChild(loadingDiv);
            
            setTimeout(() => {
                mainContent.removeChild(loadingDiv);
                alert('¬°Manga subido exitosamente!');
                
                // Agregar a la biblioteca (simulado)
                const newManga = {
                    id: mangaLibrary.length + 1,
                    title: document.querySelector('input[placeholder="T√≠tulo del manga"]').value || 'Nuevo Manga',
                    author: document.querySelector('input[placeholder="Autor"]').value || 'Autor Desconocido',
                    genre: 'shonen',
                    chapters: Math.floor(Math.random() * 100) + 1,
                    cover: null
                };
                
                mangaLibrary.unshift(newManga);
                
                // Limpiar formulario
                document.getElementById('uploadForm').reset();
                document.getElementById('uploadArea').innerHTML = `
                    <div>
                        <h3>üìÅ Arrastra y suelta tus archivos aqu√≠</h3>
                        <p>O haz clic para seleccionar archivos</p>
                        <p><small>Formatos soportados: JPG, PNG, PDF, ZIP, RAR</small></p>
                        <button type="button" class="upload-btn" onclick="document.getElementById('fileInput').click()">
                            Seleccionar Archivos
                        </button>
                    </div>
                `;
                
                showSection('library');
            }, 2000);
        });

        // Inicializar la p√°gina
        loadHomeMangas();
    </script>
</body>
